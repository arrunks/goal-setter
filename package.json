{
  "name": "goal-setter",
  "version": "1.0.0",
  "description": "a goal setting app",
  "main": "index.js",
  "scripts": {
    "build": "del build && cross-env NODE_ENV=development webpack --mode development --config backend.webpack.config.js && cross-env NODE_ENV=development webpack --mode development --config frontend.webpack.config.js",
    "start": "cross-env NODE_ENV=development node ./build/index.js",
    "nodemon": "cross-env NODE_ENV=development nodemon ./build/index.js",
    "watch:backEnd": "cross-env NODE_ENV=development webpack --watch --mode development --config backend.webpack.config.js",
    "watch:frontEnd": "cross-env NODE_ENV=development webpack --watch --mode development --config frontend.webpack.config.js",
    "startAll": "npm-run-all -p nodemon watch:backEnd watch:frontEnd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arrunks/goal-setter.git"
  },
  "keywords": [
    "expressjs",
    "reactjs",
    "mongoose"
  ],
  "author": "arrunks",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arrunks/goal-setter/issues"
  },
  "homepage": "https://github.com/arrunks/goal-setter#readme",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.6",
    "axios": "^0.19.2",
    "bootstrap": "^4.4.1",
    "react": "^16.13.0",
    "react-bootstrap": "^1.0.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "html-loader": "^1.0.0",
    "html-webpack-plugin": "^4.0.2",
    "morgan": "^1.9.1",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "redux-devtools-extension": "^2.13.8",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
